    <ul class="social-media-feed">
      {% for social_post in social_media_feed %}
        <li class="item {{social_post.source}}" 
        {% if social_post.source == 'flickr' %} style="background:url('{{social_post.image}}');"{% endif %}>

          {% if social_post.source == 'youtube' or social_post.source == 'facebook' %}
          <a class="view" href="{{social_post.url}}"><img class="img-circular" src="{{social_post.image}}"></a>
          {% endif %}

          <div class="content">
            
            {% if social_post.source != 'flickr' %}
            {% if social_post.text %}
              <p>{{social_post.text}}</p>
            {% endif %}
            {% endif %}

            <footer class="footer">
              <a class="view" href="{{social_post.url}}">View on {{social_post.source}}</a>
            </footer>

          </div>

          <i class="social-icon icon-{{social_post.source}}"></i>

        </li>
      {% endfor %}

