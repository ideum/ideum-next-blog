{% extends "base.twig" %}

{% block content %}

{% for post in posts %}

<div class="project-post-detail">

  <div class="content-wrapper">

    <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">

      <section class="project-slider{% if post.first_slide_image %}{% else %} no-slide{% endif %}">

        {% if post.first_slide_image %}

        <ul rn-carousel rn-carousel-control rn-carousel-indicator>

          <li class="project item">

            <article>

              <img src="{{TimberImage(post.get_field('first_slide_image')).src}}">

              <div class="one-column-text"><!-- choose either 'one-column-text' or 'two-column-text' for class -->

                <h2>
                  {{ post.first_slide_text }}
                </h2>

              </div>

            </article>

          </li>

          <li class="project item">

            <article>

              <img src="{{TimberImage(post.get_field('second_slide_image')).src}}">

              <div class="one-column-text">

                <h2>
                {{ post.second_slide_text }}
                </h2>
      
              </div>

            </article>

          </li>

          <li class="project item">

            <article>

              <img src="{{TimberImage(post.get_field('third_slide_image')).src}}">

              <div class="one-column-text">

                <h2>
                {{ post.third_slide_text }}
                </h2>
      
              </div>

            </article>

          </li>

        </ul>

        {% elseif post.primary_video %}
        <div class="video-wrapper">
          {{ post.primary_video }}
        </div>
        {% elseif post.primary_image %}
        <img class="primary-image" alt="{{ post.title }}" src="{{TimberImage(post.get_field('primary_image')).src}}" title="{{ post.title }}"/>
        {% endif %}

      </section>
      

      <section class="article-content">

        <div class="article-body">

          {% if post.alternative_main_content_area_title %}
          <h1 class="alternative-title">
            {{ post.alternative_main_content_area_title }}
          </h1>
          {% endif %}

          {{ post.content }}

