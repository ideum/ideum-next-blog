<!-- begin hidden content for share-dialog-{{post.ID}} -->
<div style='display:none;'>
  <div id='share-dialog-{{post.ID}}' style='padding:10px; background:#fff;'>
    <!-- Facebook -->
    <a href="http://www.facebook.com/sharer.php?u={{thispost.link}}" target="_blank"><img src="/wp-content/themes/ideum/images/social/facebook.png" alt="Facebook"></a>   
    <!-- Twitter -->
    <a href="http://twitter.com/share?url={{thispost.link}}&amp;text={{thispost.title}}" target="_blank"><img src="/wp-content/themes/ideum/images/social/twitter.png" alt="Twitter"></a>
    <!-- Google+ -->
    <a href="https://plus.google.com/share?url={{thispost.link}}" target="_blank"><img src="/wp-content/themes/ideum/images/social/google.png" alt="Google"></a>
    <!-- LinkedIn -->
    <a href="http://www.linkedin.com/shareArticle?mini=true&amp;url={{thispost.link}}" target="_blank"><img src="/wp-content/themes/ideum/images/social/linkedin.png" alt="LinkedIn"></a>
    <!-- Pinterest -->
    <!-- <a href="javascript:void((function()%7Bvar%20e=document.createElement('script');e.setAttribute('type','text/javascript');e.setAttribute('charset','UTF-8');e.setAttribute('src','http://assets.pinterest.com/js/pinmarklet.js?r='+Math.random()*99999999);document.body.appendChild(e)%7D)());"><img src="/wp-content/themes/ideum/images/social/pinterest.png" alt="Pinterest"></a> -->
    <a href="//www.pinterest.com/pin/create/button/url?={{thispost.link}}&amp;media={{site.url}}{{thispost.thumbnail.src|resize(640, 400)}}&amp;description={{thispost.title}}" data-pin-do="buttonBookmark" data-pin-shape="round" target="_blank"><img class="sharing-icon" src="/wp-content/themes/ideum/images/social/pinterest.png" alt="Pinterest"></a>
    <!-- Tumblr-->
    <a href="http://www.tumblr.com/share/link?url={{post.link|url_encode}}&amp;title={{thispost.title}}" target="_blank"><img class="sharing-icon" 
     src="/wp-content/themes/ideum/images/social/tumblr.png" alt="Tumblr" /></a>
  </div>
</div>
<!-- end hidden content for share-dialog-{{post.ID}} - revealed when user clicks 'Share This' link -->
