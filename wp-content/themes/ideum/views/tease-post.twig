{% extends "tease.twig" %}

{% block content %}

<!-- begin tease-post.twig -->

<div class="post-img-wrap" style="background-image:url('{% if post.get_thumbnail %}{{post.thumbnail.src|resize(600)}}{% else %}{{theme.link}}/images/blog-post-img-placeholders-{{ random(2) }}.jpg{% endif %}');">

  {% if post.get_thumbnail %}
  <a href="{{post.link}}"><img src="{{post.thumbnail.src|resize(600)}}" alt="Image for the post: '{{post.title}}'" title="Image for the post: '{{post.title}}'"/></a>
  {% else %}
  <a href="{{post.link}}"><img src="{{theme.link}}/images/blog-post-img-placeholders-{{ random(2) }}.jpg" alt="Placeholder image for the post: '{{post.title}}'" 
  title="Placeholder image for the post: '{{post.title}}'"/></a>
  {% endif %}

</div>

<div class="post-txt-wrap">

  <time class="time">{{post.post_date|date('F j, Y')}}</time>

  <h2 class="h2">
    <a href="{{post.link}}">{{post.title}}</a>
  </h2>

  <p>{{post.get_preview(34, 'true', '', 'true')}}</p>

  <!-- begin hidden content for featured-product-2-share -->
  <div style='display:none'>
    <div id='{{post.slug}}' class="share-dialog">
      <img class="ideum-icon" src="/wp-content/themes/ideum/images/logo.png" alt="Ideum" title="Ideum">
      <p>Like what you see? Share this.</p>
      <!-- Facebook -->
      <a href="http://www.facebook.com/sharer.php?u={{post.link|url_encode}}" target="_blank"><img class="sharing-icon" 
      src="/wp-content/themes/ideum/images/social/facebook.png" alt="Facebook"></a>
      <!-- Twitter -->
      <a href="http://twitter.com/share?url={{post.link|url_encode}}&amp;text={{thispost.title}}" target="_blank"><img class="sharing-icon" 
      src="/wp-content/themes/ideum/images/social/twitter.png" alt="Twitter"></a>
      <!-- Google+ -->
      <a href="https://plus.google.com/share?url={{post.link|url_encode}}" target="_blank"><img class="sharing-icon" 
      src="/wp-content/themes/ideum/images/social/google.png" alt="Google"></a>
      <!-- LinkedIn -->
      <a href="http://www.linkedin.com/shareArticle?mini=true&amp;url={{post.link|url_encode}}" target="_blank"><img class="sharing-icon" 
      src="/wp-content/themes/ideum/images/social/linkedin.png" alt="LinkedIn"></a>
      <!-- Pinterest -->  
      <a href="//www.pinterest.com/pin/create/button/url?={{post.link|url_encode}}&amp;media={{site.url}}{{post.thumbnail.src}}&amp;description={{post.title}}" data-pin-do="buttonBookmark"  data-pin-shape="round" target="_blank"><img class="sharing-icon" src="/wp-content/themes/ideum/images/social/pinterest.png" alt="Pinterest"></a>
    </div>
  </div>

  <!-- end hidden content for featured-product-2-share - revealed when user clicks 'Share This' link (below)-->

  <footer class="footer">
    <a class="read read-more" href="{{post.link}}">Read More</a>
    <a class="tablet-n-desktop share-dialog-tab-desk" href="#{{post.slug}}">Share This</a>
    <a class="phone-only share-dialog-phone" href="#{{post.slug}}">Share This</a>
  </footer>

</div>

<!-- end tease-post.twig -->

{% endblock %}