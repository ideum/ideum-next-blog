{% extends "base.twig" %}

{% block content %}

<div id="blog" class="sub-page-wrap blog-listing">

  <section class="highlight-text child-page">

    {% if post.can_edit %}
    <a class="edit-link" href="{{post.edit_link}}">[Edit me!]</a>
    {% endif %}

    <h1>
      The Latest From The Blog
    </h1>

    <p>
      {{post.content}}
    </p>

  </section>

  <section class="blog-post-listing">

    {% for post in posts %}
    {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
    {% endfor %}

    <div class="tool-pagination">

      <div class="pagination-interior-wrap">

        {% if pagination.prev %}
          <a href="{{pagination.prev.link}}" alt="Previous" title="Previous" class="prev arrow arrow-left {{pagination.prev.link|length ? '' : 'invisible'}}"></a>
        {% endif %}
        <ul class="pages">
          {% for page in pagination.pages %}
            <li>
              {% if page.link %}
                <a href="{{page.link}}" class="{{page.class}}">{{page.title}}</a>
              {% else %}
                <span class="{{page.class}}">{{page.title}}</span>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
        {% if pagination.next %}
          <a href="{{pagination.next.link}}" alt="Next" title="Next" class="next arrow arrow-right {{pagination.next.link|length ? '' : 'invisible'}}"></a>
        {% endif %}

      </div>

    </div>

  </section>

{% endblock %}