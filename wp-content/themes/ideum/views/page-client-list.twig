{% extends "base.twig" %}

{% block content %}

<div id="client-list" class="sub-page-wrap">

  <section class="highlight-text child-page">

    {% if post.can_edit %}
    <a class="edit-link" href="{{post.edit_link}}">[Edit me!]</a>
    {% endif %}

    {{post.content}}

  </section>

  <div class="accordion-wrap" id-expander>

    {% for child in clients %}

      <section class="item-wrap color-{{ loop.index }}" id-expander-item><!-- add class only-open to make header white and text dark -->

        <article>

          <header class-"expander" id-expander-button>

            <h1>
              {{child.title}}
            </h1>

            <button><i class="icon-caret-down"></i></button>

          </header>        

          <div class="item-content">

            <div class="text-container">

              {{child.content}}

            </div>

          </div>

        </article>

      </section>

    {% endfor %}

  </div>
  
  <section class="clients-n-partners" ng-init="clientSliderIndex=0">
    
    <div class="section-info">

      <h1 class="no-hover">
        Our Partners
      </h1>

      <div class="two-column-text"><!-- option: one-column-text -->

        <p>
          Ideum works closely with museums, technology companies, and other creative organizations. We think the company you keep says a lot about who you are.  We have great respect our partners and we are proud to work with them.
        </p>
        <p>
          We have a formal partnership with RATIO architects as we look to blend technology and architecture to enhance the visitor experience. Please see the <a href="http://architectureconnected.com" target="_blank" title="External link to the Architecture Connected website">Architecture Connected</a> website to learn more. 
        </p>

      </div>

    </div>

  </section>  

  <section class="featured-pages">
    <article class="content direct-sales light-link-color">
      <div class="txt-wrap">
        <h1>
          <a href="/contact/">Sales</a>
        </h1>
        <p>
          Please contact us at <span class="faux-link">(505) 792-1110</span> ext.1 or toll free in the US and Canada <span class="faux-link">(855) 898-6824</span>, use our online inquiry form, or emails us at <a href="&#109;&#97;&#105;&#108;&#116;&#111;&#58;&#115;&#97;&#108;&#101;&#115;&#64;&#105;&#100;&#101;&#117;&#109;&#46;&#99;&#111;&#109;">&#115;&#97;&#108;&#101;&#115;&#64;&#105;&#100;&#101;&#117;&#109;&#46;&#99;&#111;&#109;</a>. Our multitouch tables are sold domestically and internationally.
        </p>

        <footer class="footer">
          <a class="read" href="/contact/">Inquire about sales</a>
          <!-- <a class="share" href="#FIXME">Share This</a> -->
        </footer>

      </div>
    </article>

    <article class="content rentals light-link-color">
      <div class="txt-wrap">
        <h1 class="no-hover">
          <a href="http://multitouchrentals.com/" target="_blank">Multitouch Rentals</a>
        </h1>
        <p>
          Ideum's 46&quot; Platform, 55&quot; 4K Drafting table, 46&quot; and 32&quot; Coffee Tables, and 46&quot; Presenter Touch Wall are available for rent for trade shows and special events.
        </p>
        
        <footer class="footer">
          <a class="read" href="/contact/">Inquire about rentals</a>
          <!-- <a class="share" href="#FIXME">Share This</a> -->
        </footer>

      </div>
    </article>

  </section>

  {{follow_dialog}}

  {% include 'follow-us-button.twig' %}

</div>

<!-- begin hidden content for page-share -->
<div style='display:none'>
  <div id='client-list-share' class="share-dialog">
    <img class="ideum-icon" src="/wp-content/themes/ideum/images/logo.png" alt="Ideum" title="Ideum">
    <p>Like what you see? Share this.</p>
    <!-- Facebook -->
    <a href="http://www.facebook.com/sharer.php?u={{post.link|url_encode}}" target="_blank"><img class="sharing-icon" 
    src="/wp-content/themes/ideum/images/social/facebook.png" alt="Facebook"></a>
    <!-- Twitter -->
    <a href="http://twitter.com/share?url={{post.link}}&amp;text=Ideum - Our Clients" target="_blank"><img class="sharing-icon" 
    src="/wp-content/themes/ideum/images/social/twitter.png" alt="Twitter"></a>
    <!-- Google+ -->
    <a href="https://plus.google.com/share?url={{post.link|url_encode}}" target="_blank"><img class="sharing-icon" 
    src="/wp-content/themes/ideum/images/social/google.png" alt="Google"></a>
    <!-- LinkedIn -->
    <a href="http://www.linkedin.com/shareArticle?mini=true&amp;url={{post.link|url_encode}}" target="_blank"><img class="sharing-icon" 
    src="/wp-content/themes/ideum/images/social/linkedin.png" alt="LinkedIn"></a>
    <!-- Pinterest -->
    <a href="javascript:void((function()%7Bvar%20e=document.createElement('script');e.setAttribute('type','text/javascript');e.setAttribute('charset','UTF-8');e.setAttribute('src','http://assets.pinterest.com/js/pinmarklet.js?r='+Math.random()*99999999);document.body.appendChild(e)%7D)());"><img class="sharing-icon" src="/wp-content/themes/ideum/images/social/pinterest.png" alt="Pinterest"></a>
    <!-- Tumblr-->
    <a href="http://www.tumblr.com/share/link?url={{post.link|url_encode}}" target="_blank"><img class="sharing-icon" 
    src="/wp-content/themes/ideum/images/social/tumblr.png" alt="Tumblr" /></a>
  </div>
</div>
<!-- end hidden content for page-share - revealed when user clicks 'Share This Page' link in footer -->

{% endblock %}
