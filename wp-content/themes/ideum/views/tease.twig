<!-- begin tease.twig -->

<article class="tease tease-{{post.post_type}}" id="tease-{{post.ID}}">

	{% block content %}

  <div class="post-img-wrap">
  
    <img src="{{theme.link}}/images/blog-post-img-placeholders-1.jpg">

    {% if post.get_thumbnail %}
    <img src="{{post.thumbnail.src}}" />
    {% endif %}

  </div>

  <div class="post-txt-wrap">

    <time class="time">{{post.post_date|date('F j, Y')}}</time>

  	<h2 class="h2">
      <a href="{{post.link}}">{{post.title}}</a>
    </h2>

  	<p>{{post.get_preview}}</p>

    <footer class="footer">
      <a class="read read-more" href="{{post.link}}">Read More</a>
      <a class="share" href="#FIXME">Share This</a>
    </footer>

  </div>

	{% endblock %}

</article>

<!-- end tease.twig -->
