{% extends "base.twig" %}

{% block content %}

<main class="productOuterWrapper">

  <header>
    <h1 class="tablet-n-desktop">Pano</h1>
    <img src="{{theme.link}}/images/products/pano/header.jpg">
  </header>

  <main class="productInnerWrapper">

    <div ng-app="ideum.tabs">

      <!-- Tabs -->
      <div tabs class="pano">

        <!-- Pano Tab -->
        <div pane title="Pano" class="tablet-n-desktop">

          <header>
            <h1>Pano</h1>
            <h2>Twice the Size, Singular Experience</h2>
          </header>

          <div ng-app="productDetails">

            <section class="x-ray pano" ng-controller="xRayCtrl" ng-init="dataIndex = 0">

              <section class="overlay" ng-style="overlayStyle">

                <nav>
                  <a href=""
                  ng-repeat="detail in productDetails"
                  ng-class="{active: (currentDetail == $index)}"
                  ng-click="goToDetail($index)"
                  >{{ '{{ detail.title }}' }}</a>
                </nav>

                <div class="content" ng-repeat="detail in productDetails" ng-show="currentDetail == $index">

                  <h2>{{ '{{ detail.blurb }}' }}</h2>

                  <div class="body" ng-show="detailOpen" ng-bind-html="detail.content"></div>

                  <button ng-hide="detailOpen" ng-click="openDetail(true)">{{ '{{ detail.title }}' }}</button>
                  <button ng-show="detailOpen" ng-click="openDetail(false)">Close</button>

                </div>

                <button class="prev" ng-hide="detailOpen" ng-disabled="!hasPrev()" ng-click="prev()"></button>
                <button class="next" ng-hide="detailOpen" ng-disabled="!hasNext()" ng-click="next()"></button>

              </section>

            </section>

          </div>

        </div>

        <!-- Generic Phone-Only Tab -->
        <div title="Pano" class="phone-only"><!-- change title to appropriate name - this is actual text on product tab -->

          <header>
            <h1>Pano</h1>
            <h2>Twice the Size, Singular Experience</h2>
          </header>

        </div>

      </div><!-- Close tabs -->

    </div><!-- Close ideum.tabs -->

    
    <section class="productSection featured-video post-style img-left green">

      <article class="content">

        <div class="img-wrap">

          <a class="iframe" href="//www.youtube.com/embed/mx2JF8SXpyE?autoplay=1"><img src="{{theme.link}}/images/products/pano/half_01.jpg"></a>

        </div>

        <div class="txt-wrap">

          <h1 style="color:#fff;">Tough Enough for Virtually Any Environment</h1>

          <p><!-- use class 'white-dotted-allstops' for links -->
            The Pano is a first-of-its-kind multiuser, multitouch collaborative experience. Originally custom designed for interactive exhibits in museum settings, the Pano has exceptional build quality and is engineered for high traffic public spaces. The 100" screen, with 40+ touch points, can effortlessly accommodate up to eight simultaneous users for memorable interaction and sharing.
          </p>

          <!-- begin hidden content for product-share -->
          <div style='display:none'>
            <div id='pano-share' class="share-dialog">
              <img class="ideum-icon" src="/wp-content/themes/ideum/images/logo.png" alt="Ideum" title="Ideum">
              <p>Like what you see? Share this.</p>
              <!-- Facebook -->
              <a href="http://www.facebook.com/sharer.php?u={{post.link|url_encode}}" target="_blank"><img class="sharing-icon" 
              src="/wp-content/themes/ideum/images/social/facebook.png" alt="Facebook"></a>
              <!-- Twitter -->
              <a href="http://twitter.com/share?url={{post.link}}&amp;text=Ideum Pano Multitouch Table" target="_blank"><img class="sharing-icon" 
              src="/wp-content/themes/ideum/images/social/twitter.png" alt="Twitter"></a>
              <!-- Google+ -->
              <a href="https://plus.google.com/share?url={{post.link|url_encode}}" target="_blank"><img class="sharing-icon" 
              src="/wp-content/themes/ideum/images/social/google.png" alt="Google"></a>
              <!-- LinkedIn -->
              <a href="http://www.linkedin.com/shareArticle?mini=true&amp;url={{post.link|url_encode}}" target="_blank"><img class="sharing-icon" 
              src="/wp-content/themes/ideum/images/social/linkedin.png" alt="LinkedIn"></a>
              <!-- Pinterest -->
              <a href="javascript:void((function()%7Bvar%20e=document.createElement('script');e.setAttribute('type','text/javascript');e.setAttribute('charset','UTF-8');e.setAttribute('src','http://assets.pinterest.com/js/pinmarklet.js?r='+Math.random()*99999999);document.body.appendChild(e)%7D)());"><img class="sharing-icon" src="/wp-content/themes/ideum/images/social/pinterest.png" alt="Pinterest"></a>
							<!-- Tumblr-->
							<a href="http://www.tumblr.com/share/link?url={{post.link|url_encode}}" target="_blank"><img class="sharing-icon" 
							src="/wp-content/themes/ideum/images/social/tumblr.png" alt="Tumblr" /></a>
            </div>
          </div>
          <!-- end hidden content for product-share - revealed when user clicks 'Share This' link (below)-->

          <footer class="footer">
            <a class="tablet-n-desktop share share-dialog-tab-desk" href="#pano-share">Share This</a>
            <a class="phone-only share share-dialog-phone" href="#pano-share">Share This</a>
          </footer>
          
        </div>

      </article>

    </section>

    <section class="productSection">
      <div class="prod-sect-img-wrap full img-left no-bg-phone" style="background:url('{{theme.link}}/images/products/pano/full_01.jpg') no-repeat top left; background-size:cover;">
        <img class="left phone-only" src="{{theme.link}}/images/products/pano/full_01_phone.jpg">
      </div>
      <div class="productText fullRight">
        <h2>All-in-One or Control Room Set&nbsp;Up</h2>
        <p><!-- DO NOT use class 'white-dotted-tab-n-desk' or 'white-dotted-allstops' for links -->
          The Pano comes standard as an integrated unit with its own computer workstation, audio with Yamaha speakers, and a UPS (North America only). It can also be configured for a control room set up with rack-mountable hardware.
        </p>
      </div>
    </section>

    <section class="section-info key-features-head">
      <h1>Key Features</h1>
    </section>

    <ul
      class="slider pano"
      ng-init="clientSliderIndex = 0"
      rn-carousel
      rn-carousel-control
      rn-carousel-indicator
      rn-carousel-width="responsiveTwoUp()"
      rn-carousel-index="clientSliderIndex"
    >
      <li class="client-slide" ng-class="{active: clientSliderIndex==0}">
        <div class="svgHolder">
          {% include '/images/products/svg/armed.svg' %}
        </div>
        <h3>Armed &amp; Hyperthready</h3>
        <p>
          The integrated computer is a powerhouse. It includes an Intel® Quad Core i7 4770® (3.4GHz) with Hyperthreading®, 8MB cache computer with 16GB of RAM, and dual 500GB HDDs.
        </p>
      </li>
      
      <li class="client-slide" ng-class="{active: clientSliderIndex==0}">
        <div class="svgHolder">
          {% include '/images/products/svg/reach.svg' %}
        </div>
        <h3>Reach Out &amp; Touch Everything</h3>
        <p>
          Along with 40+ touch points, the touch surface on the Pano has palm rejection, bright HD or 4K / UHD resolution screens, and up to a 60hz refresh rate.
        </p>
      </li>

      <li class="client-slide" ng-class="{active: clientSliderIndex==0}">
        <div class="svgHolder">
          {% include '/images/products/svg/widi.svg' %}
        </div>
        <h3>Full Intensity Workstation</h3>
        <p>
          The Pano comes with a full, expandable workstation computer that makes it great for processor-intensive tasks. Whether you are running cutting-edge multiuser museum exhibits, complex visualizations, or games&mdash;the Pano can handle just about any application you might run.
        </p>
      </li>

      <li class="client-slide" ng-class="{active: clientSliderIndex==0}">
        <div class="svgHolder">
          {% include '/images/products/svg/demanding.svg' %}
        </div>
        <h3>Built for Demanding Spaces</h3>
        <p>
          The Pano multitouch table has a chemically strengthened glass top and the chassis is made out of aircraft-grade aluminum and cold-rolled steel. We are proud to say that the Pano table has exceptional build-quality and is perfect for public spaces and other demanding environments.
        </p>
      </li>

      <li class="client-slide" ng-class="{active: clientSliderIndex==0}">
        <div class="svgHolder">
          {% include '/images/products/svg/gestureworks.svg' %}
        </div>
        <h3>Creation by Intelligent Design</h3>
        <p>
          The Pano comes with a lifetime license for GestureWorks Core (C++, C# / .NET, Java). The license includes ticketed, timely support and free upgrades for life.
        </p>
      </li>

      <li class="client-slide" ng-class="{active: clientSliderIndex==0}">
        <div class="svgHolder">
          {% include '/images/products/svg/graphically.svg' %}
        </div>
        <h3>Graphically Speaking</h3>
        <p>
          The Pano multitouch table come with powerful graphics cards with an emphasis on performance. A standard 16GB of RAM ensures that the Pano multitouch tables can handle any application thrown at them.
        </p>
      </li>

      <li class="client-slide" ng-class="{active: clientSliderIndex==0}">
        <div class="svgHolder">
          {% include '/images/products/svg/warranty.svg' %}
        </div>
        <h3>Two Year Warranty</h3>
        <p>
          We stand by our products and provide a two-year warranty against defective materials or workmanship. The same people who build our products, provide support. See our  <a href="/spec-sheets/Ideum-2year-Touch-Product-Warranty.pdf" target="_blank">warranty document</a> for full details and restrictions.
        </p>
      </li>

    </ul>

    <a class="very-dark-gray-button spec-sheet-button" href="/spec-sheets/Ideum-Specs-Pano.pdf">Download Spec Sheet</a>

    <section class="productSection plain pano full" 
    style="background:url('{{theme.link}}/images/products/pano/full_03.jpg') no-repeat top center; background-size: cover;">
      <div class="productText white fullLeft">
        <h2>Upgrades</h2>
        <p><!-- use class 'white-dotted-allstops' for links -->
          There are a variety of upgrades and add-ons for sharing and portability.
        </p>
        <div class="specs singlelist">
          <ul class="specList">
            <li>Windows 7 Ultimate 64-Bit</li>
            <li>Blu-ray Writer</li>
            <li>Dual 1 TB 7,200 RPM Hard Disk Drives</li>
            <li>Dual 256GB or 512GB Solid State Drives</li>
          </ul>
        </div>
        
        <p class="learnMore"><a href="/creative-services/em-spectrum-touch-table-exhibit/"><strong>&gt;</strong> EM Spectrum Exhibit Software Licencing</a>
      </div>
    </section>

    <section class="made-in-usa pano">

      <h2>
        Made in the USA
      </h2>

    </section>


    <section class="productSection">
      <div class="prod-sect-img-wrap img-left" style="background:url('{{theme.link}}/images/products/pano/06_direct-sales-pano.jpg') no-repeat top center; background-size:cover;background-position: 0 -10px;">
        <img class="left phone-only" src="{{theme.link}}/images/products/pano/06_direct-sales-pano.jpg">
      </div>
      
      <div class="productText">
       	
        <h2>Sales &amp; Rentals</h2>
        <p>
          Please contact us at <span class="faux-link">(505) 792-1110</span> ext. 1 or toll free in the US and Canada <span class="faux-link">(855) 898-6824</span>, use our <a href="/contact">online inquiry form</a>, or email us at <a href="&#109;&#97;&#105;&#108;&#116;&#111;&#58;&#115;&#97;&#108;&#101;&#115;&#64;&#105;&#100;&#101;&#117;&#109;&#46;&#99;&#111;&#109;">&#115;&#97;&#108;&#101;&#115;&#64;&#105;&#100;&#101;&#117;&#109;&#46;&#99;&#111;&#109;</a>. Our multitouch tables are sold domestically and internationally.
        </p>
        <p class="note">Ideum sells the <a href="https://www.gsaadvantage.gov/advantage/catalog/product_detail.do?contractNumber=GS-35F-129DA&itemNumber=PANO+-+DUAL+4K+UHD&mfrName=IDEUM%2C+INC." target="_blank">Pano Multitouch Table</a> on GSA Advantage!®, the online ordering system (www.gsaadvantage.gov) for qualified government buyers. Contract <a 
         href="http://www.gsaelibrary.gsa.gov/ElibMain/contractorInfo.do?contractNumber=GS-35F-129DA&contractorName=IDEUM%2C+INC.&executeQuery=YES" target="_blank">GS-35F-129DA</a>.</p>
      </div>
    </section>


  </main>
</main>
{% endblock %} 
