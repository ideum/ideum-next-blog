{% extends "base.twig" %}

{% block content %}

<!-- see template for details of use -->
{# 
  css is required for each product type in the 'product colors' section in the directory: stylesheets > _variables.scss 
  also styles are required  for PRODUCT STYLES section in the directory: stylesheets > components > _x-ray.scss > 
#}

<main class="productOuterWrapper">

  <header>
    <h1 class="tablet-n-desktop">Duet Multitouch Coffee Tables</h1>
    <img src="{{theme.link}}/images/products/duet/001_duetHeader.jpg">
  </header>

  <main class="productInnerWrapper">

    <div ng-app="ideum.tabs">

      <!-- Tabs -->
      <div tabs class="coffee">

        <!-- Duet 46 Coffeee Table Tab -->
        <div pane title="Duet 46” Coffee Table" class="tablet-n-desktop"><!-- change title to appropriate name - this is actual text on product tab -->
          
          <header>
            <h1>Duet 46 Coffee Table</h1>
            <h2>Powerful Windows 8 and Android Dual-Boot Systems</h2>
          </header>

          <div ng-app="productDetails"><!-- change class (below) to appropriate name - make sure images > x-rays has appropriately named images (2) -->

            <section class="x-ray duet-46-coffee" ng-controller="xRayCtrl" ng-init="dataIndex=0"><!-- change dataIndex to tab # - 0 is start -->

              <section class="overlay" ng-style="overlayStyle">

                <nav>
                  <a href=""
                  ng-repeat="detail in productDetails"
                  ng-class="{active: (currentDetail == $index)}"
                  ng-click="goToDetail($index)"
                  >{{ '{{ detail.title }}' }}</a>
                </nav>

                <div class="content" ng-repeat="detail in productDetails" ng-show="currentDetail == $index">

                  <h2>{{ '{{ detail.blurb }}' }}</h2>

                  <div class="body" ng-show="detailOpen" ng-bind-html="detail.content"></div>

                  <button ng-hide="detailOpen" ng-click="openDetail(true)">{{ '{{ detail.title }}' }}</button>
                  <button ng-show="detailOpen" ng-click="openDetail(false)">Close</button>

                </div>

                <button class="prev" ng-hide="detailOpen" ng-disabled="!hasPrev()" ng-click="prev()"></button>
                <button class="next" ng-hide="detailOpen" ng-disabled="!hasNext()" ng-click="next()"></button>

              </section>

            </section>

          </div>

        </div>

        <!-- Duet 42 Coffee Table Tab -->
        <div pane title="Duet 42” Coffee Table" class="tablet-n-desktop"><!-- change title to appropriate name - this is actual text on product tab -->

          <header>
            <h1>Duet 42 Coffee Table</h1>
            <h2>Powerful Windows 8 and Android Dual-Boot Systems</h2>
          </header>

          <div ng-app="productDetails"><!-- change class (below) to appropriate name - make sure images > x-rays has appropriately named images (2) -->

            <section class="x-ray duet-42-coffee" ng-controller="xRayCtrl" ng-init="dataIndex=1"><!-- change dataIndex to tab # - 0 is start -->

              <section class="overlay" ng-style="overlayStyle">

                <nav>
                  <a href=""
                  ng-repeat="detail in productDetails"
                  ng-class="{active: (currentDetail == $index)}"
                  ng-click="goToDetail($index)"
                  >{{ '{{ detail.title }}' }}</a>
                </nav>

                <div class="content" ng-repeat="detail in productDetails" ng-show="currentDetail == $index">

                  <h2>{{ '{{ detail.blurb }}' }}</h2>

                  <div class="body" ng-show="detailOpen" ng-bind-html="detail.content"></div>

                  <button ng-hide="detailOpen" ng-click="openDetail(true)">{{ '{{ detail.title }}' }}</button>
                  <button ng-show="detailOpen" ng-click="openDetail(false)">Close</button>

                </div>

                <button class="prev" ng-hide="detailOpen" ng-disabled="!hasPrev()" ng-click="prev()"></button>
                <button class="next" ng-hide="detailOpen" ng-disabled="!hasNext()" ng-click="next()"></button>

              </section>

            </section>

          </div>

        </div>

        <!-- Generic Phone Only Tab -->
        <div title="Duet Coffee Tables" class="phone-only"><!-- change title to appropriate name - this is actual text on product tab -->

          <header>
            <h1>Duet 46 &amp; 42 Coffee Tables</h1>
            <h2>Powerful Windows 8 and Android Dual-Boot Systems</h2>
          </header>
          
        </div>

      </div><!-- Close tabs -->

    </div><!-- Close ideum.tabs -->

  
    <!-- ########## Begin Duet Coffee Table Section ########## -->

    <section class="featured-video post-style img-left light-gold">

      <article class="content">

        <div class="img-wrap">

          <!-- <a class="iframe" href="//www.youtube.com/embed/wKUXKRpuWhM?autoplay=1" style="display:flex;"> -->
          <span class="non-link">
            <img class="left" src="{{theme.link}}/images/products/duet/003_videoImage_still.jpg">
          </span>
