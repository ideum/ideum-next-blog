<meta charset="{{site.charset}}" />
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

<title>{{wp_title}}</title>

<meta name="description" content="{{site.description}}">

<meta property="og:site_url" content="{{site.url}}">
<meta property="og:site_name" content="{{ site.title }}">
<meta property="og:url" content="{% if post.permalink %}{{ post.permalink }}{% else %}{{site.url}}/{{ post.slug }}{% endif %}"> 
<meta property="og:title" content="{% if post.alternative_meta_title %}{{ post.alternative_meta_title }}{% elseif post.title  %}{{ post.title }}{% else %}{{wp_title}}{% endif %} | Ideum">
<meta property="og:type" content="{% if page.opengraph.type %}{{ page.opengraph.type }}{% elseif post.id == '11878' %}website{% else %}article{% endif %}">
<meta property="og:image" content="{% if page.opengraph.image %}{{ page.opengraph.image }}{% elseif post.alternative_meta_image %}{{site.url}}{{TimberImage(post.get_field('alternative_meta_image')) }}{% elseif post.alternative_meta_image_path %}{{site.url}}/{{ post.alternative_meta_image_path }}{% elseif post.thumbnail %}{{site.url}}{{ post.get_thumbnail.get_src }}{% elseif post.primary_image %}{{site.url}}/{{ post.primary_image}}{% else %} {{ site.opengraph.default_image }}{% endif %}">
<meta property="og:description" content="{% if page.opengraph.description %}{{ page.opengraph.description }}{% elseif post.alternative_meta_description %}{{ post.alternative_meta_description }}{% elseif post.pull_quote %}{{ post.pull_quote }}{% elseif post.excerpt %}{{ post.title }} - {{ post.excerpt }}{% else %}{{ site.description }}{% endif %}"/>

{# 
<meta property="og:url" content="{% if page.opengraph.url %}{{ page.opengraph.url }}{% else %}{{ page.url | replace:'index.html','' | prepend: site.baseurl | prepend: site.url }}{% endif %}"> 
#}

<link rel="pingback" href="{{site.pingback_url}}" />

{{function('wp_head')}}
