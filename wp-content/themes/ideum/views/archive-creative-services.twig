{% extends "base.twig" %}

{% block content %}

<!-- begin archive-creative-services.twig -->

<section class="article-content">

  <div class="article-body">

    <section class="our-creative-services">

      <div class="section-info">

        {% if page.can_edit %}
        <a class="edit-link" href="{{page.edit_link}}">[Edit me!]</a>
        {% endif %}

        {{page.content}} 
        <!-- content is drawn from the creative-services (11803) page - since this template does not corespond to a real page in WordPress -->

        <!--
        <div class="select-box-wrap" ng-controller="projectFilterCtrl">

          <select ui-select2 ng-model="projectType" data-placeholder="Browse By Category">
            <option value=""></option>
            {% for category in categories %}
              <option>{{ category.category_nicename }}</option>
            {% endfor %}
          </select>

        </div>
        -->

      </div>

      <div name="projs" id="projs" class="custom-project-listing">

        {% for post in posts %}
        {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
        {% endfor %}

      </div>

      <div class="tool-pagination">

      <div class="pagination-interior-wrap">

        {% if pagination.prev %}
          <a href="{{pagination.prev.link}}#projs" alt="Previous" title="Previous" class="prev arrow arrow-left {{pagination.prev.link|length ? '' : 'invisible'}}"></a>
        {% endif %}
        <ul class="pages">
          {% for page in pagination.pages %}
            <li>
              {% if page.link %}
                <a href="{{page.link}}#projs" class="{{page.class}}">{{page.title}}</a>
              {% else %}
                <span class="{{page.class}}">{{page.title}}</span>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
        {% if pagination.next %}
          <a href="{{pagination.next.link}}#projs" alt="Next" title="Next" class="next arrow arrow-right {{pagination.next.link|length ? '' : 'invisible'}}"></a>
        {% endif %}

      </div>

    </div>

  </section>

  </div>

</section>

<!-- begin hidden content for page-share -->
