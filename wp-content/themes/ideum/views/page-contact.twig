{% extends "base.twig" %}

{% block content %}

<div id="contact" class="sub-page-wrap">

  <section class="highlight-text">

    {% if post.can_edit %}
    <a class="edit-link" href="{{post.edit_link}}">[Edit me!]</a>
    {% endif %}

    <h1>
      Services
    </h1>

    <p>
      {{post.content}}
    </p>

  </section>

  <div class="contact-content">

    <section class="inquiry-form">
      
      {{ '[ideum-inquiries-form]' | shortcodes }}

    </section>

    {{sidebar_contact}}

  </div>
    
  {{featured_pages_contact}}

  <section>

    <div class="section-info">

      <p>
        <a href="#follow-dialog" class="button active inline-share">Follow Us</a>
      </p>

    </div>

  </section>
  
</div>

{% endblock %}